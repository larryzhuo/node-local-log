#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');

const child = spawn(process.execPath, [path.join(__dirname, '..', 'src', 'cli.js'), ...process.argv.slice(2)], {
  stdio: 'inherit',
  env: process.env
});

// 中转退出信号，确保优雅关闭
const signals = ['SIGINT', 'SIGTERM', 'SIGHUP'];
signals.forEach(sig => {
  process.on(sig, () => {
    if (!child.killed) child.kill(sig);
  });
});

child.on('exit', (code, signal) => {
  if (signal) {
    process.kill(process.pid, signal);
  } else {
    process.exit(code);
  }
});